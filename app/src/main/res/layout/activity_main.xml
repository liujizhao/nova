<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/splash_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash"
        android:scaleType="centerInside"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/animation_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:alpha="0.0"
            android:src="@drawable/dt2" />

        <ImageView
            android:id="@+id/animation_view_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:alpha="0.0"
            android:src="@drawable/dt3" />

        <ImageView
            android:id="@+id/animation_view_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:alpha="0.0"
            android:src="@drawable/dt4" />

        <ImageView
            android:id="@+id/animation_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            android:src="@drawable/dt1"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1.0">

        <com.exper.nova.widget.RoToolsBar
            android:id="@+id/ro_tools_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:alpha="0.0" />

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ro_tools_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:alpha="0.0"
            android:src="@drawable/home_logo_txt" />

        <View
            android:id="@+id/center_point"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/self_hd_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/center_point"
            android:layout_toLeftOf="@+id/center_point"
            android:alpha="0.0"
            android:src="@drawable/self_timer_hd" />

        <ImageView
            android:id="@+id/home_double_curl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/center_point"
            android:layout_toRightOf="@+id/center_point"
            android:alpha="0.0"
            android:src="@drawable/home_double_curl" />

        <ImageView
            android:id="@+id/home_fashion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/center_point"
            android:layout_toLeftOf="@+id/center_point"
            android:alpha="0.0"
            android:src="@drawable/home_fashion" />

        <ImageView
            android:id="@+id/home_emui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/center_point"
            android:layout_toRightOf="@+id/center_point"
            android:alpha="0.0"
            android:src="@drawable/home_emui" />

        <ImageView
            android:id="@+id/param_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:alpha="0.0"
            android:src="@drawable/param_btn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_sub_menu_bg"
            android:layout_below="@+id/home_double_curl"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/home_sub_menu_layout"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_sub_bianjiao"
                android:layout_weight="1"
                android:id="@+id/home_sub_menu_biaojiao"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_sub_duijiao"
                android:layout_weight="1"
                android:id="@+id/home_sub_menu_duijiao"
                />
        </LinearLayout>

	<ImageView
            android:id="@+id/mainze_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mianze"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:alpha="0.0"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <include
        layout="@layout/nav_layout" />


</android.support.v4.widget.DrawerLayout>

